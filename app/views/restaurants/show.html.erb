<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %> | <%= @restaurant.category %></p>

<h2>New review</h2>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5], prompt: "Rating" %>
  <%= f.submit %>
<% end %>

<h2>All reviews</h2>
<ul>
<% @restaurant.reviews.each do |r| %>
<li>
<%= r.rating %> | <%= r.content %>
</li>
<% end %>
</ul>

<%= link_to 'Back to list', restaurants_path %>
